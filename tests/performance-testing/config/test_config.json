  "test_scenarios": {
    "product_listing": {
      "enabled": true,
      "description": "Product Listing Page Performance Testing - Quick Test",
      "endpoints": {
        "products": "/products",
        "categories": "/categories",
        "brands": "/brands"
      },
      "load_test_cases": [
        {
          "name": "load_test_product_listing_normal",
          "enabled": true,
          "threads": 1,
          "ramp_up": 1,
          "loops": 1,
          "duration": 180,
          "expected_response_time": 2000,
          "expected_throughput": 25,
          "expected_error_rate": 1.0,
          "description": "Quick normal load testing for product listing page"
        },
        {
          "name": "load_test_product_listing_high",
          "enabled": true,
          "threads": 1,
          "ramp_up": 1,
          "loops": 1,
          "duration": 180,
          "expected_response_time": 3000,
          "expected_throughput": 35,
          "expected_error_rate": 2.0,
          "description": "Quick high load testing for product listing page"
        }
      ],
      "stress_test_cases": [
        {
          "name": "stress_test_product_listing_moderate",
          "enabled": true,
          "threads": 1,
          "ramp_up": 1,
          "loops": 1,
          "duration": 180,
          "expected_response_time": 5000,
          "expected_throughput": 15,
          "expected_error_rate": 5.0,
          "description": "Quick moderate stress testing for product listing page"
        },
        {
          "name": "stress_test_product_listing_extreme",
          "enabled": true,
          "threads": 1,
          "ramp_up": 1,

{
  "application": {
    "frontend_url": "http://localhost:4200",
    "api_url": "http://localhost:8091",
    "database_url": "localhost:3306"
  },
  "jmeter": {
    "base_dir": "scripts",
    "results_dir": "results",
    "data_dir": "data"

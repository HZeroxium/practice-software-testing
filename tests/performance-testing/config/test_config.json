        }
      ],
      "spike_test_cases": [
        {
          "name": "spike_test_product_listing_short",
          "enabled": true,
          "baseline": {
            "threads": 1,
            "duration": 54,
            "ramp_up": 5
          },
          "spike": {
            "threads": 1,
            "duration": 72,
            "ramp_up": 7
          },
          "recovery": {
            "threads": 1,
            "duration": 54,
            "ramp_up": 5
          },
          "expected_response_time": 3000,
          "expected_throughput": 20,
          "expected_error_rate": 2.0,
          "description": "Quick short spike testing for product listing page",
          "duration": 180
        },
        {
          "name": "spike_test_product_listing_long",
          "enabled": true,
          "baseline": {
            "threads": 1,
            "duration": 54,
            "ramp_up": 5
          },
          "spike": {
            "threads": 1,
            "duration": 72,
            "ramp_up": 7
          },
          "recovery": {
            "threads": 1,
            "duration": 54,
            "ramp_up": 5
          },
          "expected_response_time": 4000,
          "expected_throughput": 30,
          "expected_error_rate": 3.0,
          "description": "Quick long spike testing for product listing page",
          "duration": 180
        }
      ]
    }
  },
  "reporting": {
    "keep_recent_reports": 2,
    "generate_html_reports": true,
    "generate_csv_reports": true,
    "cleanup_old_results": true
  },
  "thresholds": {
    "load": {
      "response_time": 2000,
      "throughput": 25,
      "error_rate": 1.0
